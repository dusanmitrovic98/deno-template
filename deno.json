{
  "tasks": {
    "dev": "deno run --allow-read --watch ./index.ts",
    "commit": "deno run --allow-run --allow-read ./.core/git/commit.ts",
    "push": "deno run --allow-run --allow-read ./.core/git/push.ts",
    "sync": "deno run --allow-run --allow-read ./.core/git/sync.ts",
    "git": "deno task commit && deno task push && deno task sync --wait",
    "build": "deno run -A ./build.ts",
    "build:git": "deno task build && deno task git --wait",
    "start": "deno run --allow-read ./dist/bundle.js",
    "test": "deno test --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/fs": "jsr:@std/fs@1",
    "@std/path": "jsr:@std/path@1"
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["deno.window", "dom"],
    "checkJs": true
  },
  "fmt": {
    "files": {
      "include": ["src/", "tests/"],
      "exclude": ["dist/"]
    },
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/", "tests/"],
      "exclude": ["dist/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  }
}